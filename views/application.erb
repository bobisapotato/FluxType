<!DOCTYPE html>
<html>
  <head>
    <title>FluxType</title>
    <% css :reset, :application, 'http://fonts.googleapis.com/css?family=Playfair+Display&v1' %>
    <%= css %>

    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-29161571-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
  </head>
  <body>
    <div id='header'>
      <h1>FluxType</h1>
    </div>

    <div id='application'></div>

    <div id='javascript'>
      <% javascript 'https://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js', 'raphael.min.js' %>
      <% if settings.development? %>
        <% javascript :underscore, :constants, :event, :keyboard, :page, :status, :manager, 'store-js' %>
        <script type='text/javascript'>
          require_js = function(scripts, callback){ callback.call(null, true); }
        </script>
      <% else %>
        <% javascript :require %>
      <% end %>

      <% javascript :application %>
      <%= javascript %>

      <script type='text/javascript'>
        $(function(){
          ($('a[rel=external]')).click(function(e) {
            var link;
            e.preventDefault();
            window.open(($(e.currentTarget)).attr('href'));
            link = $(e.currentTarget);
            return _gat._getTrackerByName()._trackEvent(link.attr('data-track-category'), link.attr('href'));
          });
        });
      </script>
    </div>

    <% # Fork me on Github ribbon %>
    <a href="http://github.com/jvatic/FluxType" id='fork-github' rel='external' data-track-category='Github'><img style="position: absolute; top: 0; left: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_left_darkblue_121621.png" alt="Fork me on GitHub"></a>
  </body>
</html>
